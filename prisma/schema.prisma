datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Org {
    id            String   @id @default(uuid())
    created_at    DateTime @default(now())
    email         String   @unique
    password_hash String
    adress        String
    city          String
    name          String
    CEP           String
    phone         String   @unique
    role          Role?    @default(ADMIN)
    Pet           Pet[]

    @@map("orgs")
}

model Pet {
    id        String   @id @default(uuid())
    created_at DateTime @default(now())
    city      String
    name      String
    description String
    age Age
    energyLevel String
    animalSize Size
    levelOfIndependence Independence
    enviroment Enviroment
    requirement String
    org       Org      @relation(fields: [org_id], references: [id])
    org_id String

    @@map("pets")
}

enum Role {
    USER
    ADMIN
}

enum Enviroment {
    SMALL
    MEDIUM
    LARGE
}

enum Age {
    FILHOTE
    ADULTO
}

enum Size {
    PEQUENINO
    MEDIO
    GRANDE
}

enum Independence {
    BAIXO
    MEDIO
    ALTO
}
